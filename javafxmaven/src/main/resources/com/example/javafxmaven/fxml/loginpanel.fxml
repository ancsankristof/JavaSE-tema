<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane fx:id="loginpanel" prefHeight="400.0" prefWidth="300.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafxmaven.LoginPanelController">
   <children>

       <Label fx:id="welcomeText" alignment="CENTER" prefHeight="100.0" prefWidth="300.0" style="-fx-background-color: black; -fx-text-fill: white;" styleClass="lbl-danger" stylesheets="@../bootstrapfx.css" text="Jelentkezzen be!">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
       <Button layoutX="85.0" layoutY="289.0" onAction="#loginButtonClick" prefHeight="50.0" prefWidth="130.0" styleClass="btn-success" stylesheets="@../bootstrapfx.css" text="Bejelentkezés" />
      <TextField fx:id="inputUsername" layoutX="65.0" layoutY="159.0" prefHeight="30.0" prefWidth="170.0" promptText="Felhasználónév" />
      <PasswordField fx:id="inputPassword" layoutX="65.0" layoutY="213.0" prefHeight="30.0" prefWidth="170.0" promptText="Jelszó" />
      <Button layoutX="274.0" mnemonicParsing="false" onAction="#closeButton" style="-fx-text-fill: black;" styleClass="btn-danger" stylesheets="@../bootstrapfx.css" text="X" />
   </children>
</Pane>
