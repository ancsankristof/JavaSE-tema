<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane fx:id="welcomepanel" prefHeight="400.0" prefWidth="300.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafxmaven.WelcomeScreenController">
     <children>

         <Label fx:id="welcomeText" alignment="CENTER" layoutY="-1.0" prefHeight="100.0" prefWidth="300.0" style="-fx-background-color: black; -fx-text-alignment: center; -fx-text-fill: white;" text="Bejelentkezés / Regisztráció" textAlignment="CENTER">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
         <Button fx:id="loginButton" layoutX="75.0" layoutY="136.0" onAction="#loginButtonClick" prefHeight="85.0" prefWidth="150.0" styleClass="btn-success" stylesheets="@../bootstrapfx.css" text="Bejelentkezés" />
         <Button fx:id="registerButton" layoutX="75.0" layoutY="266.0" mnemonicParsing="false" onAction="#registerButtonClick" prefHeight="85.0" prefWidth="150.0" styleClass="btn-info" stylesheets="@../bootstrapfx.css" text="Regisztráció" />
      <Button layoutX="274.0" mnemonicParsing="false" onAction="#closeButton" style="-fx-text-fill: black;" styleClass="btn-danger" stylesheets="@../bootstrapfx.css" text="X" />
     </children>
 </Pane>
